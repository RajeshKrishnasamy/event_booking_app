{% extends 'base.html.twig' %}
{% block title %}Log in!{% endblock %}
{% block main %}
<div class="d-flex justify-content-center">
    <div class="card m-4" style="width: 18rem;">
        <img class="card-img-top" src="{{ asset('build/images/no-image.png') }}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{app.user.username}}</h5>
            <p class="card-text">Manage your events here..</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Event1</li>
            <li class="list-group-item">Event2</li>
            <li class="list-group-item">Event3</li>
        </ul>
        <div class="card-body">
            <a href="{{ path('event_list') }}" class="btn btn-primary btn-sm">Events</a>
        </div>
    </div>
</div>
{% endblock %}
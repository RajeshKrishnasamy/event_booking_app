<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        {% endblock %}
        <link rel="shortcut icon" href="#">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border border-secondary">
        <a class="navbar-brand" href="#">{{ site_name }}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% if app.user %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('event_list') }}">Events</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('event_new') }}">Create Event</a>
                    </li>
                {% endif %}
            </ul>
            <div class="form-inline my-2 my-lg-0">
                {% if app.user %}
                    <a href="{{ path('logout') }}"><button class="btn btn-outline-primary my-2 my-sm-0 m-1">Logout</button></a>                    
                {% else %}
                    <a href="{{ path('register') }}"><button class="btn btn-outline-primary my-2 my-sm-0 m-1">Sign Up</button></a>
                    <a href="{{ path('login') }}"><button class="btn btn-outline-success my-2 my-sm-0 m-1">Login</button></a>
                {% endif %}
            </div>
        </div>
        </nav>

    <main role="main" class="container">
            {% block main %}
            {% endblock %}
    </main>

    {% block javascripts %}
        <script src="{{ asset('build/js/jquery.js') }}"></script>
        <script src="{{ asset('build/js/popper.js') }}"></script>
        <script src="{{ asset('build/js/bootstrap.js') }}"></script>
        <script src="{{ asset('build/js/app.js') }}"></script>
    {% endblock %}
</body>
</html>
